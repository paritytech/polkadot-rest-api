{
  "sidecar_server": {
    "host": "polkadot-public-sidecar.parity-chains.parity.io",
    "port": 443,
    "protocol": "https"
  },
  "endpoint_mapping": {
    "runtime": {
      "local_endpoint": "/v1/runtime/spec",
      "sidecar_endpoint": "/runtime/spec",
      "description": "Runtime specification information"
    },
    "node_version": {
      "local_endpoint": "/v1/node/version",
      "sidecar_endpoint": "/node/version",
      "description": "Node version information (client version, implementation, chain)"
    },
    "node_network": {
      "local_endpoint": "/v1/node/network",
      "sidecar_endpoint": "/node/network",
      "description": "Node network information"
    },
    "node_transaction_pool": {
      "local_endpoint": "/v1/node/transaction-pool",
      "sidecar_endpoint": "/node/transaction-pool",
      "description": "Transaction pool information"
    },
    "blocks": {
      "local_endpoint": "/v1/blocks",
      "sidecar_endpoint": "/blocks",
      "description": "Block range information (array of blocks)"
    }
  },
  "benchmarks": {
    "runtime": {
      "endpoint": "/runtime/spec",
      "scenarios": [
        {
          "name": "light_load",
          "threads": 2,
          "connections": 10,
          "duration": "30s",
          "timeout": "60s"
        },
        {
          "name": "medium_load",
          "threads": 4,
          "connections": 50,
          "duration": "60s",
          "timeout": "120s"
        }
      ]
    },
    "node_version": {
      "endpoint": "/node/version",
      "scenarios": [
        {
          "name": "light_load",
          "threads": 2,
          "connections": 10,
          "duration": "30s",
          "timeout": "60s"
        },
        {
          "name": "medium_load",
          "threads": 4,
          "connections": 50,
          "duration": "60s",
          "timeout": "120s"
        }
      ]
    },
    "node_network": {
      "endpoint": "/node/network",
      "scenarios": [
        {
          "name": "light_load",
          "threads": 2,
          "connections": 10,
          "duration": "30s",
          "timeout": "60s"
        },
        {
          "name": "medium_load",
          "threads": 4,
          "connections": 50,
          "duration": "60s",
          "timeout": "120s"
        }
      ]
    },
    "node_transaction_pool": {
      "endpoint": "/node/transaction-pool",
      "scenarios": [
        {
          "name": "light_load",
          "threads": 2,
          "connections": 10,
          "duration": "30s",
          "timeout": "60s"
        },
        {
          "name": "medium_load",
          "threads": 4,
          "connections": 50,
          "duration": "60s",
          "timeout": "120s"
        }
      ]
    }
  }
}
